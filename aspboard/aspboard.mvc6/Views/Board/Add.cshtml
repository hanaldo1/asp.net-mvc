@model aspboard.mvc6.Models.Board

<div class="row">
	<div class="col-lg-4"></div>
	<div class="col-lg-4">
		<form class="form-horizontal" method="post" asp-controller="Board" asp-action="Add">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label>Title</label>
				<input type="text" class="form-control btitle" asp-for="BoardTitle" placeholder="please insert title" />
				<span class="text-danger" asp-validation-for="BoardTitle"></span>
			</div>
			
			<div class="form-group">
				<label>Contents</label>
				<textarea class="form-control" rows="15" asp-for="BoardContents" placeholder=""></textarea>
				<span class="text-danger" asp-validation-for="BoardContents"></span>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Save</button>
				<a class="btn btn-default" asp-controller="Board" asp-action="Index">Cancel</a>
			</div>
		</form>
	</div>
	<div class="col-lg-4"></div>
</div>